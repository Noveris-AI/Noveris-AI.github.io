# Database (PostgreSQL - Supabase or self-hosted)
DATABASE_URL="postgresql://user:password@localhost:5432/relationship_repair?schema=public"

# Supabase (Recommended for Auth + Database)
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# AI Provider (Choose one or more)
# 阿里云通义千问 (推荐 - 性价比高)
QWEN_API_KEY="sk-..."

# Anthropic Claude (Alternative)
ANTHROPIC_API_KEY="sk-ant-..."

# OpenAI (Alternative)
OPENAI_API_KEY="sk-..."

# App Configuration
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NODE_ENV="development"

# Rate Limiting (Optional - Upstash Redis for production)
# REDIS_URL="redis://localhost:6379"
# UPSTASH_REDIS_REST_URL="..."
# UPSTASH_REDIS_REST_TOKEN="..."

# Security
NEXTAUTH_SECRET="generate-with-openssl-rand-base64-32"
NEXTAUTH_URL="http://localhost:3000"

# Privacy & Observability
# Default: false (don't save raw input, only summaries)
SAVE_RAW_INPUTS="false"
# Enable basic usage analytics (no sensitive content)
ENABLE_ANALYTICS="true"
